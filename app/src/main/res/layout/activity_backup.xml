<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/BackupRelativeLayout"
    android:background="@color/colorActivityBackground"
    tools:context="com.imsajib02.passwordmanager.BackupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/backupnow_string"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorTextColor"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

                <TextView
                    android:id="@+id/backup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:gravity="end"
                    android:text="Backup now"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorholobluedark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/colorTextColor"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/restore_string"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorTextColor"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

                <TextView
                    android:id="@+id/restore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:gravity="end"
                    android:text="Restore"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorholobluedark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/colorTextColor"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/schedule_string"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorTextColor"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

                <TextView
                    android:id="@+id/schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:gravity="end"
                    android:text="Schedule backup"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorholobluedark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/colorTextColor"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
