<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_10sdp">

    <TextView
        android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/colorYellow"
        android:textStyle="bold"
        android:text="Password Manager"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appname"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_15sdp"
        android:text="Version 1.0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_below="@id/version"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginRight="@dimen/_70sdp"
        android:background="@color/colorgray"/>

    <TextView
        android:id="@+id/developer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/line1"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_15sdp"
        android:text="Developer"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_below="@id/developer"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginRight="@dimen/_70sdp"
        android:background="@color/colorgray"/>

    <TextView
        android:id="@+id/developername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/line2"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        android:text="Shafiul Islam Sajib"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

    <TextView
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/developername"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        android:text="shafiul.imsajib@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:layout_below="@id/mail"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fblink"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_facebook"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/instalink"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_instagram"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>